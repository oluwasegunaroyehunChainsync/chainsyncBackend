# Application
NODE_ENV=development
PORT=3001
APP_NAME=ChainSync

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/chainsync

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://eth.public.blastapi.io
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Smart Contract Addresses
CHAINSYNC_CONTRACT_ADDRESS=0x...
VALIDATOR_REGISTRY_ADDRESS=0x...
GOVERNANCE_ADDRESS=0x...
CST_TOKEN_ADDRESS=0x...

# Fee Configuration
BASE_FEE_PERCENTAGE=0.5
CROSS_CHAIN_FEE_PERCENTAGE=1.0
MINIMUM_FEE_AMOUNT=0.01

# Validator Configuration
MINIMUM_STAKE_AMOUNT=10
VALIDATOR_THRESHOLD=2

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Event Listeners
ENABLE_EVENT_LISTENERS=true
EVENT_LISTENER_POLL_INTERVAL=5000

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
